<%- include('../layouts/main', {title: 'My Account'}) %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title mb-4">My Account</h2>
                    
                    <!-- Flash Messages -->
                    <% if (errors && errors.length > 0) { %>
                        <% errors.forEach(error => { %>
                            <div class="alert alert-danger" role="alert">
                                <%= error %>
                            </div>
                        <% }) %>
                    <% } %>
                    
                    <% if (success && success.length > 0) { %>
                        <% success.forEach(message => { %>
                            <div class="alert alert-success" role="alert">
                                <%= message %>
                            </div>
                        <% }) %>
                    <% } %>
                    
                    <form method="POST" action="/auth/account">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Full Name</label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="name" 
                                           name="name" 
                                           value="<%= user.name %>"
                                           required 
                                           minlength="2"
                                           maxlength="50">
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" 
                                           class="form-control" 
                                           id="email" 
                                           name="email" 
                                           value="<%= user.email %>"
                                           required>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Member Since</label>
                                    <p class="text-muted"><%= user.createdAt.toLocaleDateString() %></p>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Account Status</label>
                                    <p class="text-success">
                                        <i class="fas fa-check-circle"></i> Active
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <button type="submit" class="btn btn-primary">Update Account</button>
                            <a href="/auth/change-password" class="btn btn-outline-secondary">Change Password</a>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Quick Actions -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="fas fa-shopping-bag fa-2x text-primary mb-2"></i>
                            <h5>Order History</h5>
                            <p class="text-muted">View your past orders</p>
                            <a href="/orders" class="btn btn-outline-primary btn-sm">View Orders</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="fas fa-shopping-cart fa-2x text-success mb-2"></i>
                            <h5>Current Cart</h5>
                            <p class="text-muted">Continue shopping</p>
                            <a href="/cart" class="btn btn-outline-success btn-sm">View Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>