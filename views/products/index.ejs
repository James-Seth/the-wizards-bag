<%- include('../layouts/main', {title: title}) %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <h5>Filter by Category</h5>
            <div class="list-group">
                <a href="/products" class="list-group-item list-group-item-action <%= selectedCategory === 'all' ? 'active' : '' %>">
                    All Products
                </a>
                <a href="/products?category=deck-boxes" class="list-group-item list-group-item-action <%= selectedCategory === 'deck-boxes' ? 'active' : '' %>">
                    Deck Boxes
                </a>
                <a href="/products?category=tokens" class="list-group-item list-group-item-action <%= selectedCategory === 'tokens' ? 'active' : '' %>">
                    Tokens
                </a>
                <a href="/products?category=accessories" class="list-group-item list-group-item-action <%= selectedCategory === 'accessories' ? 'active' : '' %>">
                    Accessories
                </a>
            </div>
        </div>
        
        <div class="col-md-9">
            <% if (selectedCategory !== 'all') { %>
                <h2 class="mb-4">
                    <%= selectedCategory.charAt(0).toUpperCase() + selectedCategory.slice(1).replace('-', ' ') %>
                </h2>
            <% } else { %>
                <h2 class="mb-4">All Products</h2>
            <% } %>
            
            <div class="row">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <% if (product.image) { %>
                                    <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                                <% } else { %>
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                <% } %>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title"><%= product.name %></h5>
                                    <p class="card-text"><%= product.description %></p>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <strong class="text-primary">$<%= product.price.toFixed(2) %></strong>
                                            <span class="badge bg-secondary"><%= product.category %></span>
                                        </div>
                                        <div class="mt-2">
                                            <% if (product.availableInventory > 0) { %>
                                                <p class="text-success small mb-2">Available (<%= product.availableInventory %> left)</p>
                                                <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                                                    <a href="/products/<%= product._id %>" class="btn btn-outline-primary btn-sm">View Details</a>
                                                    <% if (product.availableInventory > 0) { %>
                                                        <button class="btn btn-success btn-sm" 
                                                                onclick="handleQuickAddToCart('<%= product._id %>')">
                                                            <i class="fas fa-cart-plus"></i>
                                                        </button>
                                                    <% } else { %>
                                                        <button class="btn btn-secondary btn-sm" disabled>
                                                            Reserved
                                                        </button>
                                                    <% } %>
                                                </div>
                                            <% } else { %>
                                                <p class="text-danger small mb-2">Out of Stock</p>
                                                <div class="d-grid gap-2">
                                                    <a href="/products/<%= product._id %>" class="btn btn-outline-secondary btn-sm">View Details</a>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-12">
                        <div class="alert alert-info" role="alert">
                            <h4 class="alert-heading">No products found</h4>
                            <p>There are currently no products available in this category.</p>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
// Handle quick add to cart from product listing
function handleQuickAddToCart(productId) {
    if (window.CartManager) {
        window.CartManager.addToCart(productId, 1);
    } else {
        console.error('Cart functionality not loaded');
        alert('Cart functionality is not available at this time.');
    }
}

// Update cart count on page load
document.addEventListener('DOMContentLoaded', function() {
    if (window.CartManager) {
        window.CartManager.updateCartCount();
    }
});
</script>

