* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary-color: #2c1810;
    --secondary-color: #8b4513;
    --accent-color: #d4a574;
    --text-color: #333;
    --light-bg: #f9f6f2;
    --white: #ffffff;
    --shadow: rgba(0, 0, 0, 0.1);
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    background-color: var(--white);
}

/* Navigation */
#navbar {
    background-color: #e8dcc8;
    color: var(--primary-color);
    padding: 0;
    position: relative;
    z-index: 1000;
    box-shadow: 0 2px 10px var(--shadow);
}

.nav-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0;
}

.nav-logo {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
    margin-bottom: 0.5rem;
}

.nav-logo img {
    height: auto;
    width: 100%;
    max-height: 290px;
    object-fit: contain;
    position: relative;
    z-index: 2;
    filter: drop-shadow(0 6px 12px rgba(0, 0, 0, 0.25));
    border-radius: 8px;
}

.nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding-bottom: 1rem;
}

#navbar a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: color 0.3s ease, transform 0.2s ease;
    white-space: nowrap;
    position: relative;
}

#navbar a:hover {
    color: var(--secondary-color);
    transform: translateY(-2px);
}

/* Main Content */
main {
    padding-top: 0;
    position: relative;
    margin-top: -60px;
}

section {
    padding: 3rem 1.5rem;
    min-height: auto;
}

.content-container {
    max-width: 800px;
    margin: 0 auto;
}

/* Hero Section */
.hero {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: var(--white);
    text-align: center;
    padding: 5rem 1.5rem 4rem;
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
}

.hero-content h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--accent-color);
}

.hero-content p {
    font-size: 1.1rem;
    opacity: 0.95;
}

/* About Section */
.about {
    background-color: var(--light-bg);
}

.about h2 {
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    text-align: center;
}

.about p {
    font-size: 1.05rem;
    margin-bottom: 1.2rem;
    color: var(--text-color);
}

.feature-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-top: 2.5rem;
}

.feature {
    background-color: var(--white);
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px var(--shadow);
}

.feature h3 {
    font-size: 1.2rem;
    color: var(--secondary-color);
    margin-bottom: 0.75rem;
}

.feature p {
    font-size: 0.95rem;
    margin-bottom: 0;
}

/* Ideas Section */
.ideas {
    background-color: var(--white);
}

.ideas h2 {
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
    text-align: center;
}

.ideas > .content-container > p {
    text-align: center;
    margin-bottom: 2.5rem;
    color: var(--text-color);
}

.ideas-list {
    display: grid;
    gap: 1.25rem;
}

.idea-item {
    background-color: var(--light-bg);
    padding: 1.25rem;
    border-radius: 8px;
    border-left: 4px solid var(--secondary-color);
}

.idea-item h3 {
    font-size: 1.2rem;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
}

.idea-item p {
    font-size: 0.95rem;
    margin-bottom: 0;
    color: var(--text-color);
}

/* Gallery Section */
.gallery {
    background-color: var(--light-bg);
}

.gallery h2 {
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
    text-align: center;
}

.gallery > .content-container > p {
    text-align: center;
    margin-bottom: 2.5rem;
    color: var(--text-color);
}

.gallery-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
}

.gallery-item {
    background-color: var(--white);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px var(--shadow);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.gallery-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px var(--shadow);
}

.gallery-item img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
}

.gallery-item p {
    padding: 1rem;
    text-align: center;
    font-weight: 500;
    color: var(--primary-color);
    margin: 0;
}

/* Process Section */
.process {
    background-color: var(--white);
}

.process h2 {
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 2rem;
    text-align: center;
}

.info-box {
    background-color: var(--light-bg);
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    border-left: 4px solid var(--secondary-color);
}

.info-box h3 {
    font-size: 1.3rem;
    color: var(--primary-color);
    margin-bottom: 0.75rem;
}

.info-box p {
    font-size: 1rem;
    margin-bottom: 0;
}

/* Contact Section */
.contact {
    background: linear-gradient(135deg, var(--secondary-color) 0%, var(--primary-color) 100%);
    color: var(--white);
    text-align: center;
}

.contact h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--accent-color);
}

.contact p {
    font-size: 1.05rem;
    margin-bottom: 1.5rem;
}

.contact-info {
    background-color: rgba(255, 255, 255, 0.1);
    padding: 2rem;
    border-radius: 8px;
    margin: 2rem 0;
}

.contact-info h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--accent-color);
}

.phone-number {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 1rem 0;
    color: var(--white);
}

.cta {
    margin-top: 2rem;
    font-style: italic;
}

/* Footer */
footer {
    background-color: var(--primary-color);
    color: var(--white);
    text-align: center;
    padding: 1.5rem;
}

.footer-content p {
    font-size: 0.9rem;
    opacity: 0.8;
}

/* Responsive Design - Tablet and up */
@media (min-width: 768px) {
    .feature-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .hero-content h2 {
        font-size: 2.5rem;
    }

    .nav-logo img {
        max-height: 290px;
    }

    .ideas-list {
        grid-template-columns: repeat(2, 1fr);
    }

    .gallery-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .gallery-item img {
        height: 280px;
    }

    section {
        padding: 4rem 2rem;
    }

    main {
        margin-top: -80px;
    }

    .hero {
        padding: 6rem 2rem 4rem;
    }
}

@media (min-width: 1024px) {
    .gallery-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}

/* Small mobile adjustments */
@media (max-width: 480px) {
    #navbar {
        padding: 0;
    }

    .nav-container {
        padding: 0;
    }

    .nav-logo {
        width: 100%;
        margin-bottom: 0.5rem;
    }

    .nav-logo img {
        max-height: 230px;
    }

    .nav-links {
        gap: 1rem;
        padding-bottom: 0.75rem;
        flex-wrap: wrap;
    }

    #navbar a {
        font-size: 0.95rem;
        padding: 0.25rem 0.5rem;
    }

    main {
        margin-top: -30px;
    }

    section {
        padding: 2.5rem 1.25rem;
    }

    .content-container {
        max-width: 100%;
    }

    /* Hero Section Mobile */
    .hero {
        padding: 4rem 1.25rem 3rem;
        min-height: 40vh;
    }

    .hero-content h2 {
        font-size: 1.75rem;
        line-height: 1.3;
    }

    .hero-content p {
        font-size: 1rem;
    }

    /* About Section Mobile */
    .about h2 {
        font-size: 1.75rem;
    }

    .about p {
        font-size: 1rem;
        line-height: 1.7;
    }

    .feature {
        padding: 1.25rem;
    }

    .feature h3 {
        font-size: 1.1rem;
    }

    .feature p {
        font-size: 0.9rem;
    }

    /* Ideas Section Mobile */
    .ideas h2 {
        font-size: 1.75rem;
    }

    .ideas > .content-container > p {
        font-size: 1rem;
        margin-bottom: 2rem;
    }

    .idea-item {
        padding: 1.15rem;
    }

    .idea-item h3 {
        font-size: 1.1rem;
    }

    .idea-item p {
        font-size: 0.9rem;
    }

    /* Gallery Section Mobile */
    .gallery h2 {
        font-size: 1.75rem;
    }

    .gallery > .content-container > p {
        font-size: 1rem;
        margin-bottom: 2rem;
    }

    .gallery-grid {
        gap: 1.25rem;
    }

    .gallery-item img {
        height: 200px;
    }

    .gallery-item p {
        padding: 0.85rem;
        font-size: 0.95rem;
    }

    /* Process Section Mobile */
    .process h2 {
        font-size: 1.75rem;
        margin-bottom: 1.5rem;
    }

    .info-box {
        padding: 1.25rem;
        margin-bottom: 1.25rem;
    }

    .info-box h3 {
        font-size: 1.15rem;
    }

    .info-box p {
        font-size: 0.95rem;
    }

    /* Contact Section Mobile */
    .contact h2 {
        font-size: 1.75rem;
    }

    .contact p {
        font-size: 1rem;
    }

    .contact-info {
        padding: 1.5rem;
        margin: 1.5rem 0;
    }

    .contact-info h3 {
        font-size: 1.3rem;
    }

    .phone-number {
        font-size: 1.6rem;
        word-break: break-all;
    }

    .cta {
        font-size: 0.95rem;
    }

    /* Footer Mobile */
    footer {
        padding: 1.25rem;
    }

    .footer-content p {
        font-size: 0.85rem;
    }
}
