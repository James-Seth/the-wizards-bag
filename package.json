{
  "name": "the-wizards-bag",
  "version": "1.0.0",
  "description": "E-commerce deck boxes and TTRPG accessories",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:full": "npm run css:watch & nodemon src/server.js",
    "css:build": "sass public/scss/style.scss public/css/style.css --style compressed",
    "css:watch": "sass public/scss/style.scss public/css/style.css --watch --quiet",
    "css:dev": "sass public/scss/style.scss public/css/style.css --style expanded --source-map",
    "seed": "node scripts/seedData.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.1",
    "winston": "^3.19.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "sass": "^1.97.3"
  },
  "keywords": [
    "deck",
    "boxes",
    "ecommerce",
    "ttrpg"
  ],
  "author": "",
  "license": "ISC"
}
